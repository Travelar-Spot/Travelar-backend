  "scripts": {
    "dev": "ts-node-dev --respawn src/server.ts",
    "build": "tsc && copyfiles -u 1 src/swagger/swagger.json dist",
    "start": "node dist/server.js",
    "lint": "prettier --check \"src/**/*.{ts,js,json,md}\"",
