    "lint:eslint": "eslint \"src/**/*.{ts,js}\"",
    "lint:eslint:fix": "eslint \"src/**/*.{ts,js}\" --fix",
    "format": "prettier --write \"src/**/*.{js,ts,tsx,css,md}\"",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "test:unit": "cross-env NODE_ENV=test jest --runInBand unitarios.test.ts",
    "test:int": "cross-env NODE_ENV=test jest --runInBand integracao.test.ts",
    "test:param": "cross-env NODE_ENV=test jest --runInBand parametrizados.test.ts"
